@model TreatLines.Models.ProfileInfo.PatientProfileInfoModel

<section class="my-5">
    @*<div class="container-lg border px-5 pt-3">*@
    <div class="card border-primary mb-3">
        <div class="card-header">
                <div class="col-6">
                    <h3 class="mt-2 mb-4">User Profile</h3>
                </div>
        </div>
        <div class="card-body">
            <div class="row my-2">
                <div class="col-2">
                    <label>Name: </label>
                </div>
                <div class="col-3">
                    <input class="form-control p-0" asp-for="FirstName">
                </div>
                <div class="col-2">
                    <label>Surname: </label>
                </div>
                <div class="col-3">
                    <input class="form-control p-0" asp-for="LastName">
                </div>
            </div>
            <div class="row my-2">
                <div class="col-2">
                    <label>Email: </label>
                </div>
                <div class="col-4">
                    <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
                </div>
            </div>
            <div class="row my-2">
                <div class="col-2">
                    <label>Phone number: </label>
                </div>
                <div class="col-4">
                    <input class="form-control p-0" asp-for="PhoneNumber" />
                </div>
            </div>
            <div class="row my-2">
                <div class="col-2">
                    <label>Blood type: </label>
                </div>
                <div class="col-2">
                    <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="BloodType" />
                </div>
                <div class="col-2">
                    <label>Sex: </label>
                </div>
                <div class="col-2">
                    <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Sex" />
                </div>
            </div>
        </div>
        @if (Model.Appointment != null)
        {
                <div class="card-body">
                    <div class="row my-2">
                        <p class="text-info">Prescription: </p>
                        <textarea class="form-control" rows="3" asp-for="Appointment.Description"></textarea>
                    </div>
                </div>
        }
        else
        {
            <div class="col-6">
                <p>No prescription</p>
            </div>
        }
    </div>
</section>