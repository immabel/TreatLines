@model TreatLines.Models.ProfileInfo.HospitalAdminProfileInfoModel

<section class="my-5">
    <div class="container-lg border px-5 pt-3">
        <div class="row my-2">
            <div class="col-6">
                <h4 class="mt-2 mb-4">User Profile</h4>
            </div>
            <div class="col-5 offset-3">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-secondary nav-link"
                       asp-controller="HospitalAdmin"
                       asp-action="AddHospitalAdmin">
                        Add hospital admin
                    </a>
                    <a class="btn btn-secondary nav-link"
                       asp-controller="HospitalAdmin"
                       asp-action="MakeAppointment">
                        Make appointment
                    </a>
                </div>
            </div>
        </div>
        <form asp-controller="HospitalAdmin" asp-action="UpdateHospitalAdminInfo" method="post">
            <div class="form-group row my-2">
                <div class="col-2">
                    <label>Name: </label>
                </div>
                <div class="col-3">
                    <input class="form-control p-0" asp-for="FirstName">
                </div>
                <div class="col-2">
                    <label>Surname: </label>
                </div>
                <div class="col-3">
                    <input class="form-control p-0" asp-for="LastName">
                </div>
            </div>
            <div class="row my-2">
                <div class="col-2">
                    <label>Hospital name: </label>
                </div>
                <div class="col-4">
                    <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="HospitalName">
                </div>
            </div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <label>Email: </label>
                </div>
                <div class="col-4">
                    <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
                </div>
            </div>
            <div class="form-group row my-2">
                <div class="col-2">
                    <label>Phone number: </label>
                </div>
                <div class="col-4">
                    <input class="form-control p-0" asp-for="PhoneNumber" />
                </div>
            </div>
            <div class="form-group row my-1">
                <div class="col-4">
                    <button type="submit" class="btn btn-secondary mb-3">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</section>