@model TreatLines.Models.ProfileInfo.PatientProfileInfoHospAdminModel

<section class="my-5">
    @*<div class="container-lg border px-5 pt-3">*@
    <div class="card col-md-10 border-primary mx-auto">
        <div class="card-header">
            <div class="row my-2">
                <div class="col-6">
                    <h4 class="mt-2 mb-1">Patient Profile</h4>
                </div>
                <div class="col-3 offset-3">
                    <a class="btn btn-secondary nav-link"
                       asp-controller="HospitalAdmin"
                       asp-action="MakeAppointment"
                       asp-route-patientEmail="@Model.Email">
                        Make appointment
                    </a>
                </div>
            </div>
        </div>
        <form asp-controller="HospitalAdmin" asp-action="UpdatePatientInfo" method="post">
            <div class="card-body">
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Name: </label>
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="FirstName">
                    </div>
                    <div class="col-2">
                        <label>Surname: </label>
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="LastName">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Email: </label>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Phone number: </label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-2">
                        <label>Date of birth: </label>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="DateOfBirth">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label for="bloodtype" class="form-label mt-4">Blood type</label>
                        <select class="form-select" id="bloodtype" asp-for="BloodType">
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <label for="sex" class="form-label mt-4">Sex</label>
                        <select class="form-select" id="sex" asp-for="Sex">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Discount(%): </label>
                    </div>
                    <div class="col-1">
                        <input class="form-control" asp-for="Discount" />
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-2">
                        <label>Registration date: </label>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="RegistrationDate">
                    </div>
                </div>
                <div class="form-group col-4 my-1">
                    <button type="submit" class="btn btn-secondary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</section>