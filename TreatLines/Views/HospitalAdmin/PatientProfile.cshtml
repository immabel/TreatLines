@model TreatLines.Models.ProfileInfo.PatientProfileInfoModel

<section class="my-5">
    @*<div class="container-lg border px-5 pt-3">*@
    <div class="card border-primary mb-3">
        <div class="card-header">
            <div class="row my-2">
                <div class="col-6">
                    <h4 class="mt-2 mb-4">Patient Profile</h4>
                </div>
                <div class="col-3 offset-3">
                    <a class="btn btn-secondary nav-link"
                       asp-controller="HospitalAdmin"
                       asp-action="MakeAppointment"
                       asp-route-patientEmail="@Model.Email">
                        Make appointment
                    </a>
                </div>
            </div>
        </div>
        <form asp-controller="HospitalAdmin" asp-action="UpdatePatientInfo" method="post">
            <div class="card-body">
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Name: </label>
                    </div>
                    <div class="col-3">
                        <input class="form-control p-0" asp-for="FirstName">
                    </div>
                    <div class="col-2">
                        <label>Surname: </label>
                    </div>
                    <div class="col-3">
                        <input class="form-control p-0" asp-for="LastName">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Email: </label>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Phone number: </label>
                    </div>
                    <div class="col-4">
                        <input class="form-control p-0" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label for="bloodtype" class="form-label mt-4">Blood type</label>
                    <select multiple="" class="form-select" id="bloodtype" asp-for="BloodType">
                        <option>O+</option>
                        <option>O-</option>
                        <option>A+</option>
                        <option>A-</option>
                        <option>B+</option>
                        <option>B-</option>
                        <option>AB-</option>
                        <option>AB+</option>
                    </select>
                </div>
                <div class="form-group row my-2">
                    <label for="sex" class="form-label mt-4">Sex</label>
                    <select multiple="" class="form-select" id="sex" asp-for="Sex">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Discount: </label>
                    </div>
                    <div class="col-4">
                        <input class="form-control p-0" asp-for="Discount" />
                    </div>
                </div>
                <div class="form-group col-4 my-1">
                    <button type="submit" class="btn btn-secondary mb-3">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</section>