@model TreatLines.Models.Auth.RegistrationModel

<section class="my-5">
    <div class="card text-white bg-secondary mb-3">
        <div class="card-header">
            <h4 class="mt-2 mb-4 text-center">Adding new hospital admin</h4>
        </div>
        <div class="card-body">
            <form asp-controller="HospitalAdmin" asp-action="AddHospitalAdmin" method="post">
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="FirstName">First name: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="LastName">Last name: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="Email">Email: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="PhoneNumber">Phone number: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-1">
                    <div class="col-4">
                        <button type="submit" class="btn btn-outline-secondary mb-3">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
