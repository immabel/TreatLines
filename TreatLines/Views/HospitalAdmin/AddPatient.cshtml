@model TreatLines.Models.Auth.PatientRegistrationModel

<section class="my-5">
    <div class="card col-md-7 text-white bg-secondary mx-auto">
        <div class="card-header">
            <h4 class="mt-2 text-center">Adding new patient</h4>
        </div>
        <div class="card-body ms-1">
            <form asp-controller="HospitalAdmin" asp-action="AddPatient" method="post">
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="FirstName">First name: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="LastName">Last name: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="Email">Email: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="PhoneNumber">Phone number: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label for="sex" class="form-label">Date of birth: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-5 my-2">
                        <label for="bloodtype" class="form-label mt-4">Blood type</label>
                        <select class="form-select" id="bloodtype" asp-for="BloodType">
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </div>
                    <div class="form-group col-5 my-2">
                        <label for="sex" class="form-label mt-4">Sex</label>
                        <select class="form-select" id="sex" asp-for="Sex">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row my-1">
                    <div class="col-5">
                        <button type="submit" class="btn btn-secondary border-white">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
