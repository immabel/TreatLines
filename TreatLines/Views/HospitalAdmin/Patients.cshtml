@model IEnumerable<TreatLines.Models.Tables.PatientModel>

<br />
<div class="container row p-0 m-0">
    <div class="row my-2">
        <div class="col-6">
            <h2 class="text-info">Patients</h2>
        </div>
        <div class="col-3 offset-3">
            <a class="btn btn-secondary nav-link"
               asp-controller="HospitalAdmin"
               asp-action="AddPatient">
                Add patient
            </a>
        </div>
    </div>
    <div class="col-12 border p-3">
        <table id="patients_hospAdmin" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Registration date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.FullName</td>
                        <td>@p.Email</td>
                        <td>@p.PhoneNumber</td>
                        <td>@p.RegistrationDate</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-secondary"
                                        asp-controller="HospitalAdmin"
                                        asp-action="BlockUnblockUser"
                                        asp-route-id="@p.Id"
                                        asp-route-userType="2">
                                    @(p.Blocked == 1 ? "Unblock" : "Block")
                                </a>
                                <a class="btn btn-secondary"
                                        data-bs-toggle="tooltip"
                                        data-bs-placement="bottom"
                                        title="Make appointment"
                                        asp-controller="HospitalAdmin"
                                        asp-action="MakeAppointment"
                                        asp-route-patientEmail="@p.Email">
                                    <i class="fas fa-calendar-day"></i>
                                </a>
                                <a class="btn btn-secondary"
                                        asp-controller="HospitalAdmin"
                                        asp-action="PatientProfile"
                                        asp-route-email="@p.Email">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

