@model TreatLines.Models.Auth.DoctorRegistrationModel

<section class="my-5">
    <div class="card text-white bg-secondary mb-3">
        <div class="card-header">
            <h4 class="mt-2 mb-4 text-center">Adding new doctor</h4>
        </div>
        <div class="card-body">
            <form asp-controller="HospitalAdmin" asp-action="AddDoctor" method="post">
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="FirstName">First name: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="LastName">Last name: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="Email">Email: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="PhoneNumber">Phone number: </label>
                    </div>
                    <div class="col-5">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Position: </label>
                    </div>
                    <div class="col-2">
                        <input class="form-control p-0" asp-for="Position">
                    </div>
                    <div class="col-2">
                        <label>Appointment price: </label>
                    </div>
                    <div class="col-2">
                        <input class="form-control p-0" asp-for="Price">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label>Education: </label>
                    <textarea class="form-control" rows="3" asp-for="Education"></textarea>
                </div>
                <div class="form-group row my-2">
                    <label>Experience: </label>
                    <textarea class="form-control" rows="3" asp-for="Experience"></textarea>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <select id="schedulesId" asp-for="ScheduleId">
                            @foreach (var item in Model.Schedules)
                            {
                                <option value="@item.Id">@item.Id</option>
                            }
                        </select>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-2">
                                <label>Start time: </label>
                            </div>
                            <div class="col-2">
                                <input class="form-control p-0">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-2">
                                <label>End time: </label>
                            </div>
                            <div class="col-2">
                                <input class="form-control p-0">
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <label>Work days: </label>
                        <select id="workDays" multiple="multiple">
                        </select>
                    </div>
                </div>
                <div class="form-group row my-1">
                    <div class="col-4">
                        <button type="submit" class="btn btn-outline-secondary mb-3">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
