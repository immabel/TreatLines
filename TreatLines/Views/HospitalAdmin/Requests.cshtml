@model IEnumerable<TreatLines.Models.Tables.RequestInfoToCreatePatientModel>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hospital creation requests</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="patient_requests" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Date of birth</th>
                    <th>Date of request creation</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.FullName</td>
                        <td>@r.Email</td>
                        <td>@r.PhoneNumber</td>
                        <td>@r.DateOfBirth</td>
                        <td>@r.DateOfRequestCreation</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-secondary"
                                   asp-controller="HospitalAdmin"
                                   asp-action="ApproveRequest"
                                   asp-route-id="@r.Id">
                                    <i class="fas fa-check-circle"></i>
                                </a>
                                <a class="btn btn-secondary"
                                   asp-controller="HospitalAdmin"
                                   asp-action="RejectRequest"
                                   asp-route-id="@r.Id">
                                    <i class="fas fa-times-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
