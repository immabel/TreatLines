@model TreatLines.Models.ProfileInfo.DoctorProfileInfoModel

<section class="my-5">
    @*<div class="container-lg border px-5 pt-3">*@
    <div class="card border-primary mb-3">
        <div class="card-header">
            <div class="row my-2">
                <div class="col-6">
                    <h4 class="mt-2 mb-4">Doctor Profile</h4>
                </div>
                <div class="col-3 offset-3">
                    <a class="btn btn-secondary nav-link"
                       asp-controller="HospitalAdmin"
                       asp-action="MakeAppointment"
                       asp-route-doctorEmail="@Model.Email">
                        Make appointment
                    </a>
                </div>
            </div>
        </div>
        <form asp-controller="HospitalAdmin" asp-action="UpdateDoctorInfo" method="post">
            <div class="card-body">
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Name: </label>
                    </div>
                    <div class="col-3">
                        <input class="form-control p-0" asp-for="FirstName">
                    </div>
                    <div class="col-2">
                        <label>Surname: </label>
                    </div>
                    <div class="col-3">
                        <input class="form-control p-0" asp-for="LastName">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Email: </label>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Phone number: </label>
                    </div>
                    <div class="col-4">
                        <input class="form-control p-0" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label>Position: </label>
                    </div>
                    <div class="col-2">
                        <input class="form-control p-0" asp-for="Position">
                    </div>
                    <div class="col-2">
                        <label>Appointment price: </label>
                    </div>
                    <div class="col-2">
                        <input class="form-control p-0" asp-for="Price">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="form-check">
                        @*@if (Model.OnHoliday)
                        {*@
                            <input class="form-check-input" type="checkbox" id="flexCheck" asp-for="OnHoliday">
                        @*}
                        else
                        {
                            <input class="form-check-input" type="checkbox" value="" id="flexCheck">
                        }*@
                        <label class="form-check-label" for="flexCheck">
                            On holiday
                        </label>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label>Education: </label>
                    <textarea class="form-control" rows="3" asp-for="Education"></textarea>
                </div>
                <div class="form-group row my-2">
                    <label>Experience: </label>
                    <textarea class="form-control" rows="3" asp-for="Experience"></textarea>
                </div>
                <div class="form-group col-4 my-1">
                    <button type="submit" class="btn btn-secondary mb-3">Save changes</button>
                </div>
            </div>
            </form>
        @await Html.PartialAsync("_ScheduleInfo", Model.Schedule)
    </div>
</section>