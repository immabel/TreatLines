@model IEnumerable<TreatLines.Models.Tables.HospitalModel>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hospitals</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="hospitals_admin" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Country, city</th>
                    <th>Address</th>
                    <th>Rating</th>
                    <th>Date of creation</th>
                    <th>Register date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.Name</td>
                        <td>@h.Country, @h.City</td>
                        <td>@h.Address</td>
                        <td>@h.Rating</td>
                        <td>@h.CreationDate</td>
                        <td>@h.RegisterDate</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-secondary"
                                   style="width: 95px"
                                   asp-controller="Admin"
                                   asp-action="BlockUnblockHospital"
                                   asp-route-id="@h.Id">
                                    @(h.Blocked == 1 ? "Unblock" : "Block")
                                </a>
                                <a class="btn btn-secondary nav-link"
                                   asp-controller="Admin"
                                   asp-action="HospitalAdmins"
                                   asp-route-id="@h.Id"
                                   asp-route-hospName="@h.Name">
                                    Hospital admins
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

