@model IEnumerable<TreatLines.Models.Tables.HospitalAdminModel>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hospital admins</h2>
    </div>
    <br />
    <p>Hospital name: @ViewData["HospitalName"]</p>
    <div class="col-12 border p-3">
        <table id="hospitals_admin" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th style="width:20%">Name</th>
                    <th>Email</th>
                    <th>Phone number</th> 
                    <th>Register date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.FullName</td>
                        <td>@h.Email</td>
                        <td>@h.PhoneNumber</td>
                        <td>@h.RegisterDate</td>
                        <td>
                            @*<div class="btn-group" role="group" aria-label="Basic example">*@
                                <button class="btn btn-secondary"
                                        asp-controller="Admin"
                                        asp-action="BlockUnblockUser"
                                        asp-route-id="@h.Id">
                                    @(h.Blocked == 1 ? "Unblock" : "Block")
                                </button>
                            @*</div>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

