@model IEnumerable<TreatLines.Models.Tables.RequestInfoToCreateHospitalModel>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hospital creation requests</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="hospital_requests" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Country, city</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone number</th>
                    <th>Creation date</th>
                    <th>Date of request creation</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.HospitalName</td>
                        <td>@r.Country, @r.City</td>
                        <td>@r.Address</td>
                        <td>@r.Email</td>
                        <td>@r.PhoneNumber</td>
                        <td>@r.CreationDate</td>
                        <td>@r.DateOfRequestCreation</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <form asp-controller="Admin"
                                      asp-action="ApproveRequest"
                                      asp-route-id="@r.Id"
                                      method="post">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-secondary">
                                            <i class="fas fa-check-circle"></i>
                                        </button>
                                    </div>
                                </form>
                                <form asp-action="RejectRequest"
                                      asp-controller="Admin"
                                      asp-route-id="@r.Id"
                                      method="post">
                                    <div class="form-group">
                                        <button type="submit"
                                                class="btn btn-secondary">
                                            <i class="fas fa-times-circle"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>