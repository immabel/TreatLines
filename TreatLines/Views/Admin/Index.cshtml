@model TreatLines.Models.ProfileInfo.AdminProfileInfoModel

<section class="my-5">
    <div class="container-lg border px-5 pt-3">
        <div class="row my-2">
            <div class="col-6">
                <h4 class="mt-2 mb-4">User Profile</h4>
            </div>
            <div class="col-3 offset-3">
                <a class="btn btn-secondary"
                   asp-controller="Admin"
                   asp-action="BackUp">
                    Make db backup
                </a>
            </div>
        </div>
        <div class="row my-2">
            <div class="col-2">
                <label>Name: </label>
            </div>
            <div class="col-4">
                <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="FullName">
            </div>
        </div>@*class="form-control-plaintext p-0"*@
        <div class="row my-2">
            <div class="col-2">
                <label>Email: </label>
            </div>
            <div class="col-4">
                <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
            </div>
        </div>
        <div class="row my-2">
            <div class="col-2">
                <label>Phone number: </label>
            </div>
            <div class="col-4">
                <input type="text" class="form-control-plaintext p-0" asp-for="PhoneNumber" readonly="" />
            </div>
        </div>
    </div>
</section>