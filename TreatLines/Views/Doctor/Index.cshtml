@model TreatLines.Models.ProfileInfo.DoctorProfileInfoModel

<section class="my-5">
    @*<div class="container-lg border px-5 pt-3">*@
        <div class="card border-primary mb-3">
            <div class="card-header">
                <div class="row my-2">
                    <div class="col-6">
                        <h3 class="mt-2 mb-4">User Profile</h3>
                    </div>
                    <div class="col-3 offset-3">
                        <a class="btn btn-secondary nav-link"
                           asp-controller="HospitalAdmin"
                           asp-action="MakeAppointment">
                            Make appointment
                        </a>
                    </div>
                </div>
            </div>
            <form asp-controller="HospitalAdmin" asp-action="UpdateDoctorInfo" method="post">
                <div class="card-body">
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Name: </label>
                        </div>
                        <div class="col-4">
                            <input class="form-control p-0" asp-for="FullName">
                        </div>
                    </div>@*class="form-control-plaintext p-0"*@
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Email: </label>
                        </div>
                        <div class="col-4">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Email">
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Phone number: </label>
                        </div>
                        <div class="col-4">
                            <input class="form-control p-0" asp-for="PhoneNumber" />
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Position: </label>
                        </div>
                        <div class="col-4">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Position">
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="form-check">
                            @if (Model.OnHoliday)
                            {
                                <input class="form-check-input" disabled="" type="checkbox" value="" id="flexCheck" checked="">
                            }
                            else
                            {
                                <input class="form-check-input" disabled="" type="checkbox" value="" id="flexCheck">
                            }
                            <label class="form-check-label" for="flexCheck" asp-for="OnHoliday">
                                On holiday
                            </label>
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Education: </label>
                        </div>
                        <div class="col-6">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Education">
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Experience: </label>
                        </div>
                        <div class="col-6">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Experience">
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row my-2">
                        <div class="col-6">
                            <h5 class="mt-2 mb-4">Schedule</h5>
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Start time: </label>
                        </div>
                        <div class="col-3">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Schedule.StartTime">
                        </div>
                        <div class="col-2">
                            <label>End time: </label>
                        </div>
                        <div class="col-3">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Schedule.EndTime">
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-2">
                            <label>Work days: </label>
                        </div>
                        <div class="col-6">
                            <input type="text" readonly="" class="form-control-plaintext p-0" asp-for="Schedule.WorkDays">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group col-4 my-1">
                        <button type="submit" class="btn btn-secondary mb-3">Save changes</button>
                    </div>
                </div>
            </form>
        </div>
        @await Html.PartialAsync("_GetUpcomingAppointments")
</section>