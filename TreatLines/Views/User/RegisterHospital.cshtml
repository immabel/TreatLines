
@model TreatLines.Models.Requests.RequestToCreateHospitalModel

<section class="my-5">
    <div class="container border">
        <div class="col-lg-7 px-5 pt-3">
            <h5 class="mt-2 mb-4">Hospital registration</h5>
            <form asp-controller="User" asp-action="" method="post">
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="SubmitterFirstName"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="SubmitterFirstName" class="form-control" />
                        <span asp-validation-for="SubmitterFirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="SubmitterLastName"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="SubmitterLastName" class="form-control" />
                        <span asp-validation-for="SubmitterLastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="PhoneNumber"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="HospitalName"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="HospitalName" class="form-control" />
                        <span asp-validation-for="HospitalName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="Country"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-3">
                        <label asp-for="HospitalCreationDate"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="HospitalCreationDate" class="form-control" />
                        <span asp-validation-for="HospitalCreationDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-1">
                    <div class="col-3">
                        <button type="submit" class="btn btn-secondary mb-3">Register</button>
                    </div>
                </div>
            </form>
        </div>
        <hr />
        <div class="col-lg-10 px-5 pt-3">
            <p>You can <a asp-controller="User" asp-action="Hospitals">choose the hospital</a> and register as patient!</p>
        </div>
    </div>
</section>
