@{
    ViewData["Title"] = "Home Page";
}

<section class="Form my-5">
    <div class="bg-white col-md-7 mx-auto p-3" style="border-radius: 20px; box-shadow: 10px 10px 20px rgb(151, 163, 173); margin: 120px 0">
        <div class="row g-0">
            <div class="col-4 my-auto" style="text-align: center">
                <i class="fas fa-hospital-user fa-8x"></i>
            </div>
            <div class="col-8">
                <div class="row pt-2">
                    <h6 class="mb-0"><a asp-area="Identity" asp-page="/Account/Login">Sign into</a> your account!</h6>
                </div>
                <hr class="my-3"/>
                <h6>Don't have an account?</h6>
                    <p><a asp-controller="User" asp-action="Hospitals">Choose the hospital</a> you want and join us as patient!</p>
                    <p>OR</p>
                    <p>Register your hospital <a asp-controller="User" asp-action="RegisterHospital">here</a>!</p>
            </div>
        </div>
    </div>
</section>

