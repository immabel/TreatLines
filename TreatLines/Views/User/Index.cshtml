@{
    ViewData["Title"] = "Home Page";
}
@model TreatLines.Models.Requests.LoginRequest

<section class="Form my-5">
    <div class="border container">
        <div class="g-0 logForm">
            <div class="col-lg-7 px-5 pt-3">
                <h5>If You have an account sign in</h5>
                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Password"></label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <button type="submit" class="btn-login mb-3">Login</button>
                        </div>
                    </div>
                </form>
            </div>
            <hr/>
            <div class="col-lg-10 justify-content-center px-5 pt-3">
                <div class="row px-5">
                    <p>Don't have an account?</p>
                </div>
                <div class="row">
                    <div class="col-lg-5 px-5 pt-3">
                        <p><a asp-controller="User" asp-action="Hospitals">Choose the hospital</a> you want and join us as patient!</p>
                    </div>
                    <div class="col-lg-1 px-4 pt-3">
                        <p>OR</p>
                    </div>
                    <div class="col-lg-5 px-5 pt-3">
                        <p>Register your hospital <a asp-controller="User" asp-action="RegisterHospital">here</a>!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
