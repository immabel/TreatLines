@{
}
@model List<TreatLines.Models.Tables.HospitalModel_UserControler>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hospitals</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="hospitals_user" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th style="width:20%">Name</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Address</th>
                    <th>Type</th>
                    <th>Rating</th>
                    <th>Register date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.Name</td>
                        <td>@h.Country</td>
                        <td>@h.City</td>
                        <td>@h.Address</td>
                        <td>@h.Type</td>
                        <td>@h.Rating</td>
                        <td>@h.RegisterDateTime</td>
                        <td>
                            <div class="text-center">
                                <a class="btn nav-link text-dark" style='cursor:pointer; width:70px;' asp-controller="User" asp-action="Hospitals" asp-route-id="@h.Id">
                                Register
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

