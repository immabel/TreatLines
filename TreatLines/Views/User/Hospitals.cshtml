@model IEnumerable<TreatLines.Models.Tables.HospitalModel>

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hospitals</h2>
    </div>
    <div class="col-12 border p-3">
        <table id="hospitals_user" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Address</th>
                    <th>Rating</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td>@h.Name</td>
                        <td>@h.Country</td>
                        <td>@h.City</td>
                        <td>@h.Address</td>
                        <td>@h.Rating</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-secondary nav-link"
                                   asp-controller="User"
                                   asp-action="RegisterPatient"
                                   asp-route-id="@h.Id"
                                   asp-route-hospName="@h.Name">
                                    Register
                                </a>
                                <a class="btn btn-secondary nav-link"
                                   style='cursor:pointer;'
                                   asp-controller="User"
                                   asp-action="HospitalProfileInfo"
                                   asp-route-id="@h.Id">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
        $(document).ready(function () {
            $('#hospitals_user').DataTable();
        });
</script>