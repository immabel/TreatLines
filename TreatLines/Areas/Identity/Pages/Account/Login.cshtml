@page
@model LoginModel

<section class="m-5">
    <div class="col-md-6 p-4 container border" style="border-radius: 20px; box-shadow: 5px 5px 10px rgb(151, 163, 173);">
        <div class="row">
            <form id="account" method="post">
                <h5 class="mt-2 mb-4">If You have an account sign in</h5>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label asp-for="Input.Email"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-2">
                        <label asp-for="Input.Password"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group my-1">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary mb-3">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </div>
